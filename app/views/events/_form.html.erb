<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :miles, style: "display: block" %>
    <%= form.text_field :miles, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hours, style: "display: block" %>
    <%= form.number_field :hours, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :minutes, style: "display: block" %>
    <%= form.number_field :minutes, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :shoe, style: "display: block" %>
    <%= form.text_field :shoe, class:"form-control" %>
  </div>

  <div class="form-group">
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, class: "form-control", value: current_user.id, type: :hidden %>
    
  </div>

  </br>

  <div>
    <%= form.submit class:"btn btn-light custom-pink-background"%>
  </div>
<% end %>

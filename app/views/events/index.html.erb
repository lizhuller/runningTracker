<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>

  <% content_for :title, "Events" %>

  <div class="card">
    <div class="card-header", style="background-color: pink">
      <h3>Your Runs</h3>
    </div>
    <div class="card-body">
          <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Distance</th>
              <th scope="col">Hours</th>
              <th scope="col">Minutes</th>
              <th scope="col">Shoe</th>
              <th scope="col">Time Per Mile</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <div id="events">
              <% @events.each do |event| %>
                <% if event.user == current_user %>
                  <tr>
                    <td><%= link_to event.date, event_path(event) %></td>
                    <td><%= event.miles %></td>
                    <td><%= event.hours %></td>
                    <td><%= event.minutes %></td>
                    <td><%= event.shoe %></td>
                    <td><%= event.mile_time %></td>
                    <td><%= link_to "Edit this event", edit_event_path(event) %></td>
                    <td><%= button_to "Destroy this event", event, method: :delete, class:'btn btn-sm btn-outline-danger' %></td>
                  </tr>
                <% end %>
              <% end %>
            </div>
          </tbody>
        </table>

        <%= link_to "Add Run", new_event_path, class:"btn btn-light", style:"background-color: pink" %>
    </div>
</div>
<% end %>



